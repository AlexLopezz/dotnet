<Window x:Class="MenuContextWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuContextWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="txtExample"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Height="50"
                 Width="120"
                 Margin="20"
                 FontSize="30">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="cmnuPToCm" Header="Pulgadas a Centimetros" Click="cmnuPToCm_Click"/>
                    <MenuItem Name="cmnuCmToP" Header="Centimetros a Pulgadas" Click="cmnuCmToP_Click"/>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </Grid>
</Window>
