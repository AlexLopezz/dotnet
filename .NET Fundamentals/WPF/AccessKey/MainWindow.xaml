<Window x:Class="AccessKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessKey"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid>
        <Button Name="bttOpen" Content="_Escribir" HorizontalAlignment="Left" Margin="74,42,0,0" VerticalAlignment="Top" Click="bttOpen_Click" Width="43"/>
        <Button Name="bttClear" Content="_Borrar" HorizontalAlignment="Left" Margin="157,42,0,0" VerticalAlignment="Top" Click="bttClear_Click" Width="43"/>
        <Button Name="bttClose" Content="_Cerrar" HorizontalAlignment="Left" Margin="211,64,0,0" VerticalAlignment="Top" Click="bttClose_Click" Width="39"/>

        <TextBox Name="txtMessage" HorizontalAlignment="Left" Margin="74,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126"/>
        <Label Content="_Mensaje" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="25" Target="{Binding ElementName=txtMessage}"/>
    </Grid>
</Window>
