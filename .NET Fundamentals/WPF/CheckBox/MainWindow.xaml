<Window x:Class="CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Width="200" Height="150">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Cantidad" />
            <TextBox Name="txtCount" Margin="10,0,0,0" Width="80" Text="1"></TextBox>
        </StackPanel>
        <CheckBox Name="cbCebolla" IsChecked="True" Content="Cebolla" />
        <CheckBox Name="cbTomate" Content="Tomate"/>
        <CheckBox Name="cbPapa" Foreground="Orange" Content="Papa"/>
        <Button Content="Enviar" Margin="5" HorizontalAlignment="Left" Click="Button_Click"></Button>
        <TextBlock TextWrapping="Wrap" Text="Total"/>
        <TextBlock Name="txbTotal"
                   Background="LightGray" 
                   Height="50"
                   FontSize="10"
                   Text="//"/>
    </StackPanel>
</Window>
